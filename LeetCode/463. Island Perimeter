class Solution {
public:
    int islandPerimeter(vector<vector<int>>& grid) {
        int perimeter = 0;
        if (grid.empty() || grid[0].empty())
            return perimeter;
        int m = grid.size(), n = grid[0].size();
        for (int i = 0; i < m; i++)
        {
            for (int j = 0; j < n; j++)
            {
                if (grid[i][j] == 0)
                    continue;
                perimeter += 4;
                if (j+1 < n && grid[i][j+1] == 1)
                    perimeter -= 2;
                if (i+1 < m && grid[i+1][j] == 1)
                    perimeter -= 2;
            }
        }
        return perimeter;
    }
};
